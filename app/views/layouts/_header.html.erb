<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "MMS", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>

            <% if admin_user? current_user %>
              <li><%= link_to "Admin", admin_users_path %></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Create <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Create Project", "#" %></li>
                  <li><%= link_to "Create Team", new_team_path %></li>
                  <li><%= link_to "Create User", "#" %></li>
                  <li><%= link_to "Create Position", "#" %></li>
                  <li><%= link_to "Create Skill", "#" %></li>
                </ul>
              </li>
            <% else %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  View <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Projects", projects_path %></li>
                  <li><%= link_to "Teams", teams_path %></li>
                  <li><%= link_to "Users", "#" %></li>
                  <li><%= link_to "Positions", positions_path %></li>
                  <li><%= link_to "Skills", "#" %></li>
                </ul>
              </li>
            <% end %>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Skills", skills_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Positions", positions_path %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>

