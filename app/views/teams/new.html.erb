<% provide(:title, 'Create a new team') %>
<h1>Create a new team</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@team) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :leader %>
      <%= f.collection_select :id_leader, User.all, :id, :name %>

      <%= f.submit "Create team", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>